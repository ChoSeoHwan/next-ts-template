{
    "name": "projects",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "next": "10.0.1",
        "react": "17.0.1",
        "react-dom": "17.0.1"
    },
    "devDependencies": {
        "@types/node": "^14.14.6",
        "@types/react": "^16.9.56",
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "@typescript-eslint/parser": "^4.6.1",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "prettier": "^2.1.2",
        "typescript": "^4.0.5"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "prettier": "prettier \"src/**/*.{js,jsx,ts,tsx}\"",
        "format": "yarn prettier --write",
        "lint": "eslint src",
        "lint:fix": "yarn lint --fix",
        "validate": "yarn prettier --list-different && yarn lint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": ["yarn format", "yarn lint:fix", "git add"]
    }
}
